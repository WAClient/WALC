{
  "name": "walc",
  "version": "0.1.12",
  "description": "A WhatsApp Desktop client for linux systems. This is an unofficial client. Use https://web.whatsapp.com for official web client as official desktop client for linux does not exist.",
  "main": "src/main.js",
  "scripts": {
    "start": "electron .",
    "dist": "npm run prod && rm -rf dist && electron-builder --dir && cp /usr/lib/x86_64-linux-gnu/libXtst.so.6 dist/linux-unpacked/ && cp /usr/lib/x86_64-linux-gnu/libXss.so.1 dist/linux-unpacked/ && electron-builder --prepackaged dist/linux-unpacked",
    "dev": "npm run development",
    "development": "mix",
    "watch": "mix watch",
    "watch-poll": "mix watch -- --watch-options-poll=1000",
    "hot": "mix watch --hot",
    "prod": "npm run production",
    "production": "mix --production"
  },
  "bin": {
    "walc": "main.js"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/cstayyab/WALC.git"
  },
  "keywords": [
    "whatsapp",
    "whatsapp-linux",
    "whatsapp-web"
  ],
  "author": "cstayyab <cstayyab@gmail.com> (https://cstayyab.com)",
  "license": "GPL-3.0-or-later",
  "bugs": {
    "url": "https://github.com/cstayyab/WALC/issues"
  },
  "build": {
    "appId": "com.cstayyab.linux.unofficial.whatsapp",
    "productName": "WALC",
    "files": [
      "!dist",
      "!release-builds"
    ],
    "linux": {
      "category": "Social",
      "description": "An unofficial WhatsApp Desktop client for Linux. For official client use https://web.whatsapp.com as the official desktop client for Linux is not available.",
      "target": [
        "AppImage",
        "snap"
      ],
      "icon": "src/icons/logo360x360.png",
      "synopsis": "WALC - unoffficial WhatsApp Linux Client",
      "publish": {
        "provider": "github",
        "owner": "cstayyab",
        "host": "github.com"
      }
    },
    "snap": {
      "plugs": [
        "default",
        "camera"
      ]
    }
  },
  "devDependencies": {
    "@mdi/js": "^5.9.55",
    "deepmerge": "^4.2.2",
    "electron": "^11.3.0",
    "electron-builder": "^22.4.0",
    "electron-devtools-installer": "^3.1.1",
    "electron-packager": "^14.2.1",
    "electron-rebuild": "^1.11.0",
    "laravel-mix": "^6.0.13",
    "postcss": "^8.2.8",
    "sass": "^1.32.8",
    "sass-loader": "^11.0.1",
    "vue": "^2.5.17",
    "vue-loader": "^15.9.6",
    "vue-template-compiler": "^2.6.12",
    "vuetify": "^2.4.4",
    "vuetify-loader": "^1.7.2",
    "vuetifyjs-mix-extension": "0.0.20",
    "webpack": "^5.25.0"
  },
  "homepage": "https://cstayyab.com/projects/walc",
  "dependencies": {
    "axios": "^0.21.1",
    "create-desktop-shortcuts": "^1.0.2",
    "dot-prop": "^6.0.1",
    "electron-context-menu": "^2.4.0",
    "electron-store": "^5.1.1",
    "electron-updater": "^4.2.5",
    "electron-window-state": "^5.0.3",
    "get-port-sync": "^1.0.0",
    "lsb-release": "^0.1.0",
    "mime": "^2.4.5",
    "puppeteer-core": "^7.1.0",
    "puppeteer-in-electron": "^3.0.3",
    "vue-router": "^3.5.1",
    "whatsapp-web-electron.js": "^1.12.5"
  }
}
